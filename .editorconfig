; Common Editor Configuration
; Root EditorConfig
root = true

; General Settings
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space
tab_width = 4

[*.cs]
charset = utf-8-bom

[*.json]
tab_width = 2
indent_size = 2

[*.{yml,yaml}]
tab_width = 2
indent_size = 2

[*.{props,targets,csproj,dcproj}]
tab_width = 2
indent_size = 2

[.editorconfig]
tab_width = 2
indent_size = 2

[nuget.config]
tab_width = 2
indent_size = 2